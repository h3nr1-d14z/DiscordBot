# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here  # Get from https://discord.com/developers/applications
CLIENT_ID=your_client_id_here      # Application ID from Discord Developer Portal
GUILD_ID=your_guild_id_for_testing # Right-click your server > Copy Server ID (optional)

# Database
DATABASE_PATH=./data/bot.db

# API Keys (Optional)
WEATHER_API_KEY=your_openweathermap_api_key  # From https://openweathermap.org/api

# Bot Features
ENABLE_ECONOMY=true
ENABLE_LEVELING=true
DEFAULT_PREFIX=!

# Development
NODE_ENV=development  # Use 'production' for deployment
LOG_LEVEL=info       # Options: error, warn, info, debug
AUTO_REGISTER=false  # Set to true to auto-register commands on startup

# Server Configuration (for health checks/webhooks)
PORT=8736            # Custom port for bot's internal server
WEBHOOK_PATH=/webhook