{
  "name": "discord-fun-bot",
  "version": "1.0.0",
  "description": "A feature-rich Discord bot with games and fun commands",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "test": "jest",
    "deploy": "npm run build && pm2 start ecosystem.config.js",
    "register": "tsx src/scripts/register-commands.ts",
    "register:global": "tsx src/scripts/register-commands.ts --global",
    "register:guild": "tsx src/scripts/register-commands.ts --guild=",
    "clear-commands": "tsx src/scripts/clear-commands.ts",
    "clear-commands:global": "tsx src/scripts/clear-commands.ts --global",
    "commands:help": "echo 'Use npm run register --help or npm run clear-commands --help for usage info'",
    "db:init": "tsx src/scripts/init-database.ts",
    "db:reset": "tsx src/scripts/reset-database.ts",
    "db:migrate": "echo 'No migrations available'"
  },
  "keywords": [
    "discord",
    "bot",
    "games",
    "fun"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@discord/embedded-app-sdk": "^2.1.0",
    "@discordjs/voice": "^0.18.0",
    "@distube/ytdl-core": "^4.16.12",
    "axios": "^1.7.9",
    "canvas": "^3.1.2",
    "cors": "^2.8.5",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "ms": "^2.1.3",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/ms": "^0.7.34",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
